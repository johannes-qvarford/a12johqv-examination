<rules>
	<rule id="s2-rule-1" match="1.0">
		<firstAction>
			<Sensor name="AttackedCondition">
				<unitID>?U</unitID>
			</Sensor>
    </firstAction>
    <secondAction>
      <Sensor name="UnitKilledCondition">
        <unitID>!U</unitID>
      </Sensor>
    </secondAction>
  </rule>
  <rule id="s2-rule-2" match="1.0">
    <firstAction>
      <Sensor name="BuildingCompleteCondition">
				<actor>?X</actor>
				<unitID>?U</unitID>
			</Sensor>
    </firstAction>
		<secondAction>
			<Sensor name="EntityExistsCondition">
				<actor>!X</actor>
				<unitID>!U</unitID>
			</Sensor>
    </secondAction>
  </rule>
  <rule id="s2-rule-3" match="1.0">
    <firstAction>
      <Sensor name="EntityAtCondition">
        <actor>?X</actor>
        <unitID>?U</unitID>
      </Sensor>
    </firstAction>
		<secondAction>
			<Sensor name="EntityExistsCondition">
				<actor>!X</actor>
				<unitID>!U</unitID>
			</Sensor>
    </secondAction>
	</rule>
	<rule id="s2-rule-4" match="1.0">
		<firstAction>
			<Sensor name="EntityTypeAtCondition">
				<actor>?X</actor>
				<unitID>?U</unitID>
			</Sensor>
    </firstAction>
    <secondAction>
      <Sensor name="EntityAtCondition">
        <actor>!X</actor>
        <unitID>!U</unitID>
      </Sensor>
    </secondAction>
	</rule>
	<rule id="s2-rule-5" match="1.0">
		<firstAction>
			<Sensor name="EntityTypeAtCondition">
				<actor>?X</actor>
				<unitID>?U</unitID>
			</Sensor>
    </firstAction>
		<secondAction>
			<Sensor name="EntityExistsCondition">
				<actor>!X</actor>
				<unitID>!U</unitID>
			</Sensor>
    </secondAction>
	</rule>
	<rule id="s2-rule-6" match="1.0">
		<firstAction>
			<Sensor name="NewUnitByCondition">
				<unitType>?T</unitType>
			</Sensor>
    </firstAction>
    <secondAction>
      <Sensor name="EntityTypeExistsCondition">
        <entityType>!T</entityType>
      </Sensor>
    </secondAction>
	</rule>
	<rule id="s2-rule-7" match="1.0">
		<firstAction>
			<Sensor name="NumberOfUnitsOfTypeCondition">
				<actor>?X</actor>
				<unitType>?U</unitType>
			</Sensor>
    </firstAction>
    <secondAction>
      <Sensor name="UnitTypeExistsCondition">
        <actor>!X</actor>
        <unitType>!U</unitType>
      </Sensor>
    </secondAction>
	</rule>
	<rule id="s2-rule-gold" match="0.5">
		<firstAction>
			<Sensor name="StatusCondition">
				<Status>3</Status>
			</Sensor>
    </firstAction>
    <secondAction>
      <Sensor name="GoldCondition">
      </Sensor>
    </secondAction>
	</rule>
	<rule id="s2-rule-wood" match="0.5">
		<firstAction>
			<Sensor name="StatusCondition">
				<Status>3</Status>
			</Sensor>
    </firstAction>
		<secondAction>
			<Sensor name="WoodCondition">
			</Sensor>
    </secondAction>
  </rule>
  <rule id="s2-rule-train/build->use" match="1.0">
    <firstAction>
      <Sensor name="NewUnitByCondition">
        <unitType>?Y</unitType>
      </Sensor>
    </firstAction>
		<secondAction>
			<Sensor name="EntityTypeExists">
				<entityType>?Y</entityType>
			</Sensor>
    </secondAction>
  </rule>
  <rule id="s2-rule-10" match="0.5">
    <firstAction>
      <Sensor name="StatusCondition">
        <Status>2</Status>
      </Sensor>
    </firstAction>
		<secondAction>
			<Sensor name="WinGameGoal">
			</Sensor>
    </secondAction>
	</rule>
	<rule id="s2-rule-11" match="1.0">
		<firstAction>
			<Action name="Build">
				<type>5</type>
			</Action>		
		</firstAction>
		<secondAction>
			<Action name="Train">
				<type>3</type>
			</Action>		
		</secondAction>
	</rule>
	<rule id="s2-rule-12" match="1.0">
		<firstAction>
			<Action name="Build">
				<type>4</type>
			</Action>		
		</firstAction>
		<secondAction>
			<Action name="Train">
				<type>3</type>
			</Action>		
		</secondAction>
	</rule>
</rules>